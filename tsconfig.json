{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "commonjs",                     
    "rootDir": ".",                         
    "outDir": "dist",                         
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/db/*": ["./src/db/*"],
    },
    "typeRoots": ["./node_modules/@types", "./types"],
  }
}