{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "nodenext",                     
    "rootDir": ".",                         
    "outDir": "dist",                         
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/routes": ["./src/routes/index"],
      "@/routes/*": ["./src/routes/*"],
      "@/db": ["./src/db/index"],
      "@/db/*": ["./src/db/*"],
    },
    "typeRoots": ["./node_modules/@types", "./types"],
  },
  "include": ["src/**/*.ts", "knexfile.js"],
}